{
  "name": "pavao-server",
  "version": "1.0.0",
  "description": "API para o aplicativo pavao-app",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "./node_modules/.bin/eslint .",
    "lint:fix": "./node_modules/.bin/eslint . --fix",
    "lint:report": "./node_modules/.bin/eslint -f json -o ./lint-report.json .",
    "format": "prettier --write \"**/*.+(js|json|yml|yaml|md)\"",
    "start": "node index.js",
    "dev": "NODE_ENV=development nodemon index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pablomaribondo/pavao-server.git"
  },
  "keywords": [
    "node",
    "api",
    "rest",
    "fastify"
  ],
  "author": "Pablo Maribondo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pablomaribondo/pavao-server/issues"
  },
  "homepage": "https://github.com/pablomaribondo/pavao-server#readme",
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "dotenv": "^8.1.0",
    "fastify": "^2.9.0",
    "got": "^9.6.0"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "2.4.1",
    "lint-staged": "^9.4.1",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2"
  }
}
